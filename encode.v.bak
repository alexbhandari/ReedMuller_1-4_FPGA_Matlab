module encode (message, codeword);
	input [5:0] message;
	output [15:0] codeword;

	//m*G
	generate 
		for(i=0; i<=4; i=i+1) //loop through m's index
			for(j=0; j<=15; j=j+1) //compute c[i] by summing each element of the codeword (G's column) times m[i]
				assign codeword[i] = codeword[i] + message[i]*G[i][j];
	endgenerate

endmodule